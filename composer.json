{
    "name": "zarthus/sass-bridge",
    "description": "Bridges the dart-sass binary to PHP for development purposes",
    "homepage": "https://github.com/zarthus/php-sass-bridge",
    "version": "1.0",
    "type": "library",
    "license": "MIT",
    "readme": "README.md",
    "keywords": ["sass", "scss"],
    "autoload": {
        "psr-4": {
            "Zarthus\\Sass\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zarthus\\Sass\\TestFramework\\": "test/Framework",
            "Zarthus\\Sass\\IntTest\\": "test/Integration",
            "Zarthus\\Sass\\UnitTest\\": "test/Unit"
        }
    },
    "authors": [
        {
            "name": "Jos Ahrens",
            "homepage": "https://github.com/zarthus"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "vimeo/psalm": "^4.22"
    },
    "suggest": {
        "symfony/process": "(6.x) To utilize the symfony/process driver"
    },
    "scripts": {
        "psalm": "psalm",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": false
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
